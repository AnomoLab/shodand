<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_protocol_row"
    android:layout_width="match_parent"
    android:layout_height="@dimen/height_touchable_element"
    android:orientation="vertical"
    android:gravity="center_vertical"
    android:padding="@dimen/internal_component_padding_row"
    android:background="@drawable/item_row_selected">

    <TextView
        android:id="@+id/txt_protocol_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:textSize="@dimen/desc_text_size"
        android:textColor="@drawable/item_text_selected" />

</LinearLayout>