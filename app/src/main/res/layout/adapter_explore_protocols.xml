<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="4dp">

    <LinearLayout
        android:id="@+id/layout_protocols"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/internal_component_padding"
        android:background="@drawable/item_row_selected">

        <TextView
            android:id="@+id/txt_protocols_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/title_text_size"
            android:textColor="@drawable/item_text_selected" />

        <TextView
            android:id="@+id/txt_protocols_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/desc_text_size"
            android:textColor="@drawable/item_text_selected" />

    </LinearLayout>

</android.support.v7.widget.CardView>